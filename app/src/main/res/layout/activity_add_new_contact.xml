<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1414BC"
    tools:context=".AddNewContactActivity">



        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:src="@drawable/ic_back_arrow" />

        <TextView
            android:id="@+id/addContacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/back"
            android:layout_marginStart="20dp"
            android:text="Add Contacts"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/addContacts"
            android:layout_marginStart="20dp"
            android:text="Please Fill In The Following Information" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/Information"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_card_view">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

                <LinearLayout
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!--Edit Layout for Name starts here-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textSize="18sp" />


                    <EditText
                        android:id="@+id/editName"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edit_background"
                        android:hint="Enter Name"
                        android:maxLines="1"
                        android:paddingStart="10dp"
                        android:singleLine="true" />
                    <!--Edit Layout for Name ends here-->

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@id/name">

                    <!--Edit Layout for Address starts here-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Address"
                        android:textSize="18sp" />


                    <EditText
                        android:id="@+id/editAddress"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edit_background"
                        android:hint="Enter Address"
                        android:maxLines="1"
                        android:paddingStart="10dp"
                        android:singleLine="true" />
                    <!--Edit Layout for Address starts here-->

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@+id/address">

                    <!--Edit Layout for Email starts here-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Email"
                        android:textSize="18sp" />


                    <EditText
                        android:id="@+id/editEmail"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edit_background"
                        android:hint="Enter Email(optional)"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:paddingStart="10dp"
                        android:singleLine="true" />
                    <!--Edit Layout for email starts here-->

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/email"
                    android:orientation="vertical">


                    <!--Edit Layout for Number starts here-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Number"
                        android:textSize="18sp" />


                    <EditText
                        android:id="@+id/editNumber"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edit_background"
                        android:hint="Enter Mobile Number"
                        android:inputType="number"
                        android:maxLines="1"
                        android:paddingStart="10dp"
                        android:singleLine="true" />
                    <!--Edit Layout for Number ends here-->



                    <TextView
                        android:id="@+id/newLeadText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add new lead"
                        android:drawableStart="@drawable/ic_add_circle_outline_24px"
                        android:drawablePadding="4dp"
                        android:gravity="center"
                        android:layout_marginTop="16dp"/>
                </LinearLayout>
                <!--New Lead Layout starts here-->
                <LinearLayout
                    android:id="@+id/newLeadLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@+id/number"
                    android:visibility="gone">

                <LinearLayout
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!--Linear layout for holding status nad lead source starts here-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <!--Spinner for Status starts here-->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="Status"
                                android:textSize="18sp" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/edit_background">

                                <Spinner
                                    android:id="@+id/spinnerStatus"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                            </RelativeLayout>
                            <!--Spinner for Status ends here-->

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <!--Spinner for Status starts here-->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="Lead Source"
                                android:textSize="18sp" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/edit_background">

                                <Spinner
                                    android:id="@+id/spinnerLeadSource"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                            </RelativeLayout>
                            <!--Spinner for Status ends here-->

                        </LinearLayout>


                    </LinearLayout>
                    <!--Linear layout for holding status nad lead source ends here-->

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/spinner"
                    android:orientation="vertical">

                    <!--Edit Layout for Email starts here-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Description"
                        android:textSize="18sp" />


                    <EditText
                        android:id="@+id/editDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:hint="Description(optional)"
                        android:singleLine="true" />
                    <!--Edit Layout for email starts here-->

                </LinearLayout>

                </LinearLayout>


                <Button
                    android:id="@+id/doneButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/newLeadLayout"
                    android:layout_marginTop="8dp"
                    android:text="Done"/>

            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>



