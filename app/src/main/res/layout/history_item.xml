<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:text="Sale of Panasonic tv"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:maxLines="1"/>

        <!--TextView for name starts here-->

        <LinearLayout
            android:id="@+id/contactDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/description"
            android:visibility="gone">

            <TextView
                android:id="@+id/contactName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:text="Aaditya Shah"
                android:textColor="#575454" />


            <TextView
                android:id="@+id/contactAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:drawablePadding="5dp"
                android:text="Simara Bara, Nepal"
                android:textSize="12sp"
                app:drawableStartCompat="@drawable/ic_location" />
        </LinearLayout>

        <!--TextView for next address ends here-->


        <!--TextView for next followups starts here-->


        <LinearLayout
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contactDetails"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/timeStamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/contact"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:drawablePadding="5dp"
                android:text="May 4 12:00 PM"
                android:textSize="14sp"
                app:drawableStartCompat="@drawable/ic_schedule" />

            <!--TextView for next address ends here-->


            <!--TextView for next followups starts here-->

            <TextView
                android:id="@+id/sources"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:drawableStart="@drawable/ic_sources"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="Friends"
                android:visibility="gone"/>

        </LinearLayout>

        <!--TextView for next followups starts here-->


        <!--TextView for notes starts here-->


    </RelativeLayout>

</androidx.cardview.widget.CardView>